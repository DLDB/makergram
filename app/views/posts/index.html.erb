<h1>Welcome to MakerGram!</h1>
<% if @posts.any? %>
  <% @posts.each do |post| %>
    <article class='postCard'>
    <h3><%= post.title %></h3>
    <%= post.description %>
    <%= image_tag post.picture.url(:medium) , class: "uploaded-pic" %>
    <% if post.user == current_user %>
      <%= link_to "Delete", post_path(post), method: :delete %>
    <% end %>
    </article>
  <% end %>
<% end %>
<%= link_to "New Post", new_post_path %>
